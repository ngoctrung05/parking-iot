# Application Configuration
APP_NAME="IoT Parking Management System"
APP_VERSION="1.0.0"
DEBUG=True

# Database Configuration
# For SQLite (default, easy setup)
DATABASE_URL="sqlite:///./parking.db"

# For PostgreSQL (production recommended)
# DATABASE_URL="postgresql://user:password@localhost:5432/parking_db"

# MQTT Broker Configuration (HiveMQ Cloud)
# Get your cluster URL from HiveMQ Cloud dashboard
MQTT_BROKER_HOST="your-cluster.s1.eu.hivemq.cloud"
MQTT_BROKER_PORT=8883
MQTT_USERNAME="your-hivemq-username"
MQTT_PASSWORD="your-hivemq-password"
MQTT_KEEPALIVE=60
MQTT_USE_TLS=True
MQTT_CA_CERTS=""
MQTT_TLS_INSECURE=False

# Security
SECRET_KEY="your-secret-key-here-change-in-production-use-openssl-rand-hex-32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Admin Account (created on first run)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="admin123"
ADMIN_EMAIL="admin@parking.local"

# Parking System Configuration
TOTAL_PARKING_SLOTS=10
HOURLY_RATE=5.0
DAILY_MAX_RATE=50.0
GRACE_PERIOD_MINUTES=15

# CORS Settings
ALLOWED_ORIGINS="http://localhost:8000,http://127.0.0.1:8000,http://192.168.42.175:8000"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
RELOAD=True

# Logging
LOG_LEVEL="INFO"

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL="noreply@parking.local"
